{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.org/schemas/encoder.schema.json",
  "title": "Video Encoder Parameters",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "codec": {
      "type": "string",
      "enum": [
        "H264",
        "H265",
        "AV1",
        "VP9",
        "MPEG2"
      ]
    },
    "profile": {
      "type": "string",
      "enum": [
        "baseline",
        "main",
        "high",
        "main10",
        "main444",
        "main-still",
        "0",
        "1"
      ]
    },
    "level": {
      "type": "string",
      "pattern": "^[0-9](\\.[0-9])?$"
    },
    "preset": {
      "type": "string",
      "enum": [
        "ultrafast",
        "superfast",
        "veryfast",
        "faster",
        "fast",
        "medium",
        "slow",
        "slower",
        "veryslow"
      ]
    },
    "tune": {
      "type": "string",
      "enum": [
        "psnr",
        "ssim",
        "fastdecode",
        "zerolatency",
        "animation",
        "grain",
        "none",
        "film"
      ]
    },
    "bit_depth": {
      "type": "integer",
      "enum": [
        8,
        10,
        12
      ]
    },
    "chroma_subsampling": {
      "type": "string",
      "enum": [
        "4:2:0",
        "4:2:2",
        "4:4:4"
      ]
    },
    "color_primaries": {
      "type": "string",
      "enum": [
        "BT.709",
        "BT.2020",
        "BT.601",
        "DCI-P3"
      ]
    },
    "transfer_characteristics": {
      "type": "string",
      "enum": [
        "BT.709",
        "BT.1886",
        "PQ",
        "HLG"
      ]
    },
    "matrix_coeffs": {
      "type": "string",
      "enum": [
        "BT.709",
        "BT.2020-ncl",
        "BT.601"
      ]
    },
    "framerate": {
      "type": "number",
      "minimum": 1.0,
      "maximum": 120.0
    },
    "gop_size": {
      "type": "integer",
      "minimum": 1,
      "maximum": 600
    },
    "b_frames": {
      "type": "integer",
      "minimum": 0,
      "maximum": 16
    },
    "ref_frames": {
      "type": "integer",
      "minimum": 1,
      "maximum": 16
    },
    "intra_refresh": {
      "type": "boolean"
    },
    "open_gop": {
      "type": "boolean"
    },
    "rc_mode": {
      "type": "string",
      "enum": [
        "cbr",
        "vbr",
        "crf",
        "qp"
      ]
    },
    "bitrate_kbps": {
      "type": "integer",
      "minimum": 0,
      "maximum": 1000000
    },
    "max_bitrate_kbps": {
      "type": "integer",
      "minimum": 0,
      "maximum": 1000000
    },
    "vbv_buf_ms": {
      "type": "integer",
      "minimum": 0,
      "maximum": 5000
    },
    "vbv_init_pct": {
      "type": "integer",
      "minimum": 0,
      "maximum": 100
    },
    "aq_mode": {
      "type": "string",
      "enum": [
        "off",
        "variance",
        "auto",
        "cyclic"
      ]
    },
    "aq_strength": {
      "type": "number",
      "minimum": 0.0,
      "maximum": 3.0
    },
    "psy_rd": {
      "type": "number",
      "minimum": 0.0,
      "maximum": 3.0
    },
    "me_method": {
      "type": "string",
      "enum": [
        "dia",
        "hex",
        "umh",
        "esa",
        "tesa"
      ]
    },
    "me_range": {
      "type": "integer",
      "minimum": 4,
      "maximum": 128
    },
    "sc_detection": {
      "type": "boolean"
    },
    "min_qp": {
      "type": "integer",
      "minimum": 0,
      "maximum": 51
    },
    "max_qp": {
      "type": "integer",
      "minimum": 0,
      "maximum": 51
    },
    "qp_i": {
      "type": "integer",
      "minimum": 0,
      "maximum": 51
    },
    "qp_p": {
      "type": "integer",
      "minimum": 0,
      "maximum": 51
    },
    "qp_b": {
      "type": "integer",
      "minimum": 0,
      "maximum": 51
    },
    "hdr_mode": {
      "type": "string",
      "enum": [
        "off",
        "pq",
        "hlg"
      ]
    },
    "sar_num": {
      "type": "integer",
      "minimum": 1,
      "maximum": 65535
    },
    "sar_den": {
      "type": "integer",
      "minimum": 1,
      "maximum": 65535
    },
    "timecode": {
      "type": "string",
      "pattern": "^[0-9]{2}:[0-9]{2}:[0-9]{2}:[0-9]{2}$"
    },
    "timestamp_mode": {
      "type": "string",
      "enum": [
        "dts",
        "pts",
        "both"
      ]
    },
    "svc_layers": {
      "type": "integer",
      "minimum": 1,
      "maximum": 8
    }
  },
  "required": [
    "codec",
    "profile",
    "level",
    "bit_depth",
    "framerate",
    "gop_size",
    "rc_mode",
    "timestamp_mode"
  ]
}